generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                    BigInt  @unique
  username              String?
  role                  String? @default("user")
  isHourlyUpdateEnabled Boolean @default(false)
  isDailyUpdateEnabled  Boolean @default(false)
  utcOffset             Int  @default(0)
}
